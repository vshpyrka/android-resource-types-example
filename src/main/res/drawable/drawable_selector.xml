<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"
        android:drawable="@drawable/highlight_pressed" /> <!-- pressed -->
    <item android:state_focused="true"
        android:drawable="@drawable/highlight_disabled" /> <!-- focused -->
    <item android:state_hovered="true"
        android:drawable="@drawable/highlight_disabled" /> <!-- hovered -->
    <item android:drawable="@drawable/highlight_selected" /> <!-- default -->

</selector>
