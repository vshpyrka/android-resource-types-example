<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.resources.types.ResourceTypeAnimActivity">

    <LinearLayout
        android:id="@+id/actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/propertyAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Property animation"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/tweenAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View animation"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/frameAnimation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Frame animation"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        android:contentDescription="@null"
        android:src="@drawable/ic_android"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actions"
        tools:alpha="1" />

</androidx.constraintlayout.widget.ConstraintLayout>
